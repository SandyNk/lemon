{
    "name": "lemon",
    "displayName": "lemon",
    "description": "a serial port tool for vscode extension",
    "version": "0.0.1",
    "publisher": "lemon",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "//指定插件激活事件",
        "workspaceContains:**/.serialport"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "port.select",
                "title": "选择COM口",
                "category": "PORT"
            },
            {
                "command": "port.baudrate",
                "title": "选择波特率",
                "category": "PORT"
            },
            {
                "command": "port.dataparitystop",
                "title": "数据位校验位停止位",
                "category": "PORT"
            },
            {
                "command": "port.open",
                "title": "打开串口",
                "category": "PORT"
            },
            {
                "command": "port.close",
                "title": "关闭串口",
                "category": "PORT"
            },
            {
                "command": "port.input",
                "title": "输入内容",
                "category": "PORT"
            },
            {
                "command": "port.sendALine",
                "title": "发送一行内容",
                "category": "PORT"
            },
            {
                "command": "port.sendAll",
                "title": "发送全文",
                "category": "PORT"
            },
            {
                "command": "port.sendSelect",
                "title": "发送选择内容",
                "category": "PORT"
            },
            {
                "command": "port.toDoc",
                "title": "输出到文件",
                "category": "PORT"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "port.sendSelect",
                    "group": "1_port"
                },
                {
                    "when": "editorTextFocus&&!editorHasSelection",
                    "command": "port.sendALine",
                    "group": "1_port"
                },
                {
                    "when": "editorTextFocus&&!editorHasSelection",
                    "command": "port.sendAll",
                    "group": "1_port"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "serialport": "^6.0.4"
    }
}
